<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Wikipedia's WikiLinks" Height="450" Width="800">
    <Grid>
        <Canvas Name ="Wikipedia">
            <Label Canvas.Left="238" Canvas.Top="43">Search Wikipedia:</Label>
            <Label Canvas.Left="169" Canvas.Top="175" VerticalAlignment="Center">Current Page :</Label>
            <Button Height="30" Width="64" Canvas.Left="567" VerticalAlignment="Center" Canvas.Top="175" Click="Button_Click"> Visit Page</Button>

            <TextBox Name ="Search"  KeyDown="OnKeyDown" Canvas.Left="347" Canvas.Top="40"  Height="32" Width="106" VerticalContentAlignment="Center" AcceptsReturn="False">
            </TextBox>

            <TextBlock Name ="Current" Height="30" Width="130" VerticalAlignment="Center"  Canvas.Left="259" Canvas.Top="180"/>
            

            <ScrollViewer Canvas.Left="169" Canvas.Top="217" Height="162" Width="462">
                <ListView Name ="Links" SelectionMode="Single" MouseDoubleClick="Links_MouseClick">

                </ListView>
            </ScrollViewer>


        </Canvas>

    </Grid>
</Window>
